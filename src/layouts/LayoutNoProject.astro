---
import MovingCloudBg from "@components/MovingCloudBg.astro";
import NavbarNoProject from "@components/NavbarNoProject.astro";
import "@styles/global.css";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ClientRouter />
    <title>Hillary The's Portfolio</title>
  </head>
  <body>
    <div
      class="bg-background relative min-h-svh w-full overflow-hidden"
      id="parent"
    >
      <NavbarNoProject />
      <MovingCloudBg />
      <div class="h-full">
        <slot />
      </div>
    </div>
  </body><style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
