---
import Layout from "@layouts/Layout.astro";

import HeadingImage from "@assets/project-assets/psych-vision/psychvision-banner.png";
import PsychvisionConcept from "@assets/project-assets/psych-vision/psychvision-concept.png";

import ColorPallete from "@components/project/psych-vision/ColorPallete.astro";
import FinalResult from "@components/project/psych-vision/FinalResult.astro";
import MerchList from "@components/project/psych-vision/MerchList.astro";
import DesignConcept from "@components/project/shared/DesignConcept.astro";
import Heading from "@components/project/shared/Heading.astro";

const headingText =
  "Psych Vision is a project to create illustration patterns for merchandise for the Psychology department at Universitas Ciputra.";

const conceptText = [
  "PsychVision is a pattern for the UC psychology department, symbolizing the brain's role in thinking and behavior. It features elements like a brain, magnifying glass, pills, and cogwheel, reflecting observation, problem-solving, and mental health care.",
];
---

<Layout>
  <div class="flex h-full w-full justify-center">
    <div class="flex w-full max-w-7xl flex-col gap-4">
      <Heading headingImage={HeadingImage} headingText={headingText} />
      <DesignConcept
        image={PsychvisionConcept}
        alt="concept art"
        text={conceptText}
      />
      <ColorPallete />
      <FinalResult />
      <MerchList />
    </div>
  </div>
</Layout>
