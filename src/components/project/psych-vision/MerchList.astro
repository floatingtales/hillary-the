---
import MerchImage from "@assets/project-assets/psych-vision/psychvision-merch.png";
import TitleHorizontalLine from "@components/project/shared/TitleHorizontalLine.astro";
import { Image } from "astro:assets";
---

<section
  id="merch-list"
  class="flex w-full flex-col items-center justify-center gap-16"
>
  <TitleHorizontalLine title="UC PSYCHOLOGY MERCHANDISE" />
  <div class="flex w-full flex-col items-center justify-center gap-1">
    <Image
      src={MerchImage}
      alt="Merch Mockup"
      width={MerchImage.width / 3}
      class="grow"
    />
  </div>
</section>
