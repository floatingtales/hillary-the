---
import Support3 from "@assets/project-assets/ah-pek/support-1.png";
import Support1 from "@assets/project-assets/ah-pek/support-2.png";
import Support2 from "@assets/project-assets/ah-pek/support-3.png";
import { Image } from "astro:assets";
import TitleHorizontalLine from "../shared/TitleHorizontalLine.astro";
---

<section
  id="support-design"
  class="flex w-full flex-col items-center justify-center gap-16"
>
  <TitleHorizontalLine title="SUPPORT DESIGN ELEMENTS" />
  <div class="flex w-full items-center justify-center gap-4">
    <Image
      src={Support1}
      width={Support1.width / 3}
      alt="Ah Pek Making Coffee"
      class="grow"
    />
    <Image
      src={Support2}
      width={Support2.width / 3}
      alt="Ah Pek Making Toast"
      class="grow"
    />
    <Image
      src={Support3}
      width={Support3.width / 3}
      alt="Ah Pek Enjoying Coffee"
      class="grow"
    />
  </div>
  <p class="font-display text-primary w-5/6 text-center text-2xl">
    Here is an illustration of customers enjoying food at Ah Pek restaurant.
    This illustration is an additional design element to support the design
    concept.
  </p>
</section>
