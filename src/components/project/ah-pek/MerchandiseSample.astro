---
import MerchOne from "@assets/project-assets/ah-pek/merch-one.png";
import MerchTwo from "@assets/project-assets/ah-pek/merch-two.png";
import TitleHorizontalLine from "@components/project/shared/TitleHorizontalLine.astro";
import { Image } from "astro:assets";
---

<section
  id="merch-sample"
  class="flex w-full flex-col items-center justify-center gap-16"
>
  <TitleHorizontalLine title="MERCHANDISE SAMPLE" />
  <div class="flex w-full flex-col items-center justify-center gap-4">
    <Image
      src={MerchOne}
      width={MerchOne.width / 3}
      alt="Ah Pek Making Coffee"
      class="grow"
    />
    <Image
      src={MerchTwo}
      width={MerchTwo.width / 3}
      alt="Ah Pek Making Toast"
      class="grow"
    />
  </div>
</section>
